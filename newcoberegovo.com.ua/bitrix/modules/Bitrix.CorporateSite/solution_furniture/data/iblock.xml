  <iblock name="Каталог мебели" indexcontent="true" sort="100" typeid="type_iblock_furniture_catandserv" xmlid ="iblock_furniture_catalog.#SiteId#">
    <permissions>
      <permission rolename="Guest">IBlockRead</permission>
    </permissions>
    <store item="iblock" optname="CatalogIblockId"></store>
    <captions>
      <caption type="addelement">Добавить предмет мебели</caption>
      <caption type="addsection">Добавить категорию мебели</caption>
      <caption type="changeelement">Изменить предмет мебели</caption>
      <caption type="changesection">Изменить категорию мебели</caption>
      <caption type="deleteelement">Удалить предмет мебели</caption>
      <caption type="deletesection">Удалить категорию мебели</caption>
      <caption type="elementlist">Список мебели</caption>
      <caption type="elementname">предмет мебели</caption>
      <caption type="elementsname">Мебель</caption>
      <caption type="modifyingelement">Редактирование предмета мебели</caption>
      <caption type="modifyingsection">Редактирование категории мебели</caption>
      <caption type="newelement">Новый предмет мебели</caption>
      <caption type="newsection">Новая категория мебели</caption>
      <caption type="sectionlist">Список категорий мебели</caption>
      <caption type="sectionname">Категория мебели</caption>
      <caption type="sectionsname">Категории мебели</caption>
    </captions>
    <propdef id ="showonmain" type="Bitrix.System.Boolean" for="section" >
      <loc lang="ru">Показывать раздел на главной странице</loc>
    </propdef>
    <propdef id ="specialoffer" type="Bitrix.System.Boolean" for="element" >
      <loc lang="ru">Специальное предложение</loc>
    </propdef>
    <propdef id ="price" type="Bitrix.System.Int" for="element" >
      <loc lang="ru">Цена</loc>
    </propdef>
    <propdef id ="pricecurrency" type="Bitrix.System.Enumeration" for="element" >
      <loc lang="ru">Валюта цены (подпись)</loc>
      <enum>
        <value default="true" xmlid="corp_cf_cur_1" sort="10">руб.</value>
        <value sort="30" xmlid="corp_cf_cur_2">евро</value>
        <value sort="20" xmlid="corp_cf_cur_3">$</value>
      </enum>
    </propdef>
    <propdef id ="size" type="Bitrix.System.Text" for="element" >
      <loc lang="ru">Габариты (Д х Ш х В)</loc>
      <settings>
        <setting name="ValidationRegex"><![CDATA[[1-9][0-9]*x[1-9][0-9]*x[1-9][0-9]*]]></setting>
      </settings>
    </propdef>
    <propdef id ="s_size" type="Bitrix.System.Text" for="element" >
      <loc lang="ru">Размеры спального места</loc>
      <settings>
        <setting name="ValidationRegex"><![CDATA[[1-9][0-9]*x[1-9][0-9]]]></setting>
      </settings>
    </propdef>
    <propdef id ="artnumber" type="Bitrix.System.Text" for="element" >
      <loc lang="ru">Артикул</loc>
    </propdef>
    <propdef id ="material" type="Bitrix.System.Text" for="element" >
      <loc lang="ru">Материал</loc>
    </propdef>
    <propdef id ="manufacturer" type="Bitrix.System.Text" for="element" >
      <loc lang="ru">Производитель</loc>
    </propdef>
  </iblock>
